{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI: Pixel Track",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "ingest_api.main:app",
                "--reload"
            ],
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/venv/bin/python",
            "cwd": "${workspaceFolder}",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Worker: Event Processor",
            "type": "debugpy",
            "request": "launch",
            "program": "worker/main.py",
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/venv/bin/python",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ],
    "compounds": [
        {
            "name": "API + Worker",
            "configurations": [
                "FastAPI: Pixel Track",
                "Worker: Event Processor"
            ]
        }
    ]
}